# Embedding Service Configuration

# Model settings
MODEL_NAME=paraphrase-multilingual-mpnet-base-v2
# Alternative models:
# MODEL_NAME=BAAI/bge-m3
# MODEL_NAME=intfloat/multilingual-e5-large

# Server settings
HOST=0.0.0.0
PORT=8000

# Kafka settings (for batch consumer mode)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_INPUT_TOPIC=news_cleaned
KAFKA_OUTPUT_TOPIC=news_embedding
KAFKA_CONSUMER_GROUP=embedding-consumer

# Redis cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL_HOURS=24

# Processing settings
BATCH_SIZE=32
MAX_TEXT_LENGTH=512
